@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model EmployeeTracker.Web.Pages.Employees.CreateModal
@{
}

@{
    Layout = null;
}

<form method="post" id="CreateEmployeeModal" asp-page="/Employees/CreateModal">
    <abp-modal>
        <abp-modal-header title="New Employee"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-employee-modal-tabs">
                <abp-tab title="Employee Information" class="mt-3">
                    <div id="employee-information-wrapper" class="mt-3">
                        <abp-input asp-for="Employee.Name" label="Name" />
                        <abp-input asp-for="Employee.Salary" label="Salary" type="number" />
                        <abp-input asp-for="Employee.StartTime" type="date" 
                        value="@Model.Employee.StartTime"
                        abp-id-name="@Model.Employee.StartTime"
                        label="Start Date"
                                  />
                        <abp-input asp-for="Employee.Description" label="Description"/>
                        <abp-select asp-for="Employee.Department"
                        label="Department">
                           
                            
                        </abp-select>
                    </div>
                </abp-tab>
                <abp-tab title="Manager">
                    <abp-select asp-for="Employee.HeadName"
                                asp-items="@Model.HeadList"
                                
                    >
                        
                    </abp-select>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>