@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model EmployeeTracker.Web.Pages.Employees.EditModal
@{
    Layout = null;
}

<form method="post" id="EditEmployeeModal" asp-page="/Employees/EditModal">
    <abp-modal>
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-employee-modal-tabs">
                <abp-tab title="Employee Information" class="mt-3">
                    <div id="book-information-wrapper" class="mt-3">
                        <abp-input asp-for="Id" />
                        <abp-input asp-for="EditingEmployee.Name" label="Name"/>
                        <abp-input asp-for="EditingEmployee.Salary" label="Salary" type="number"/>
                        <abp-input asp-for="EditingEmployee.StartTime" type="date" label="Start Time"
                                   
                                   />
                        <abp-select asp-for="EditingEmployee.Department"
                                    label="Department">
                            
                            
                        </abp-select>
                        <abp-input asp-for="EditingEmployee.Description" label="Description" />
                    </div>
                </abp-tab>
                <abp-tab title="Managers">
                    <div id="category-list-wrapper" class="mt-3">
                        <abp-select asp-for="EditingEmployee.HeadName"
                                    asp-items="@Model.HeadList"
                                    label="Manager Name">

                        </abp-select>
                    </div>
                </abp-tab>
                
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>